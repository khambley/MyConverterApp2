<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="MyConverterApp2.Controls.ConverterResultView">
    <VerticalStackLayout>
        <!-- From Unit Symbol and Value -->
        <Label FontSize="{OnPlatform Default=Default, iOS=Body, Android=Body }"
                FontFamily="OpenSansBold"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,5"
                IsVisible="{Binding Source={x:Reference this}, Path=IsResultVisible}">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding Source={x:Reference this}, Path=FromSymbol}" />
                        <Span Text=" " />
                        <Span Text="{Binding Source={x:Reference this}, Path=UnitValue, StringFormat='{0:F2}'}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <!-- Down Arrow Icon -->
            <Label Text="&#xf063;"
                    FontFamily="FontAwesomeSolid"
                    FontSize="{OnPlatform Default=Default, iOS=Body, Android=Body }"
                    TextColor="Black"
                    Margin="0,0,0,5"
                    HorizontalOptions="Center"
                    IsVisible="{Binding Source={x:Reference this}, Path=IsResultVisible}" />

        <!-- To Unit Symbol and Value -->
            <Label FontSize="{OnPlatform Default=Default, iOS=Body, Android=Body }"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,5"
                IsVisible="{Binding Source={x:Reference this}, Path=IsResultVisible}">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding Source={x:Reference this}, Path=ToSymbol}" />
                        <Span Text=" " />
                        <Span Text="{Binding Source={x:Reference this}, Path=ConversionResult, StringFormat='{0:F2}'}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        <!-- <Label FontSize="{OnPlatform Default=Default, iOS=Body, Android=Body }"
                HorizontalTextAlignment="Start"
                Margin="0,0,0,5"
                IsVisible="{Binding Source={x:Reference this}, Path=IsResultVisible}">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="1"/>
                        <Span Text=" " />
                        <Span Text="{Binding Source={x:Reference this}, Path=FromSymbol}" />
                        <Span Text=" = " />
                        <Span Text="{Binding Source={x:Reference this}, Path=ConversionResult, StringFormat='{0:F2}'}" />
                        <Span Text=" " />
                        <Span Text="{Binding Source={x:Reference this}, Path=ToSymbol}" />
                    </FormattedString>
                </Label.FormattedText>
                </Label> -->
    </VerticalStackLayout>
</ContentView>