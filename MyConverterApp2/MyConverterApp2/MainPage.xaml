<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:epj.Expander.Maui;assembly=epj.Expander.Maui"
             xmlns:controls="clr-namespace:MyConverterApp2.Controls"
             x:Class="MyConverterApp2.MainPage">

    <ScrollView>
        <VerticalStackLayout x:Name="AccordionLayout" 
                             Spacing="2">
            <!-- Expander 1 -->
            <controls:ExpanderView x:Name="Expander1"
                                   HeaderText="Expander 1"
                                   HeaderBackgroundColor="LightGray">

                   <controls:ExpanderView.ExpanderContent>
                        <Label Text="This is the content of Expander 1"
                               VerticalOptions="Start"
                               HorizontalOptions="Start" />
                    </controls:ExpanderView.ExpanderContent>    
                                
            </controls:ExpanderView>
            <!-- Expander 2 -->
            <controls:ExpanderView x:Name="Expander2"
                                   HeaderText="Expander 2"
                                   HeaderBackgroundColor="LightGreen">

                   <controls:ExpanderView.ExpanderContent>
                    <VerticalStackLayout>
                        <Label Text="This is the content of Expander 2"
                               VerticalOptions="Start"
                               HorizontalOptions="Center" />                     
                    </VerticalStackLayout>
                    
                    </controls:ExpanderView.ExpanderContent>                
            </controls:ExpanderView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
