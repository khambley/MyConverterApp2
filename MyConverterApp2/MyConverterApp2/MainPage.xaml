<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:epj.Expander.Maui;assembly=epj.Expander.Maui"
             xmlns:controls="clr-namespace:MyConverterApp2.Controls"
             x:Class="MyConverterApp2.MainPage">

        <VerticalStackLayout x:Name="AccordionLayout" 
                             Spacing="2">
            <!-- Expander 1 -->
            <controls:ExpanderView x:Name="Currency"
                                   HeaderText="Currency"
                                   HeaderIcon="&#x24;"
                                   HeaderBackgroundColor="LightSeaGreen">

                   <controls:ExpanderView.ExpanderContent>
                        <VerticalStackLayout Spacing="10" Padding="20">
                            <!-- Result Display -->
                            <HorizontalStackLayout>
                                <Label Text="1 Celsius = "
                                       FontSize="Small"
                                       FontAttributes="Bold" />

                                <Label Text="33.8 Fahrenheit"
                                    FontSize="Small"
                                    FontAttributes="Bold" />
                            </HorizontalStackLayout>
                            
                            <!-- First Row -->
                            <Grid ColumnSpacing="10" ColumnDefinitions="*, 2*">
                                <Entry Grid.Column="0"
                                    Placeholder="Enter value"
                                    Keyboard="Numeric"
                                    HorizontalOptions="FillAndExpand" />
                                <Picker Grid.Column="1"
                                        Title="Select unit"
                                        HorizontalOptions="FillAndExpand">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Celsius</x:String>
                                            <x:String>Fahrenheit</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Grid>

                            <!-- Second Row -->
                            <Grid ColumnSpacing="10" ColumnDefinitions="*, 2*">
                                <Entry Grid.Column="0"
                                    Placeholder="Converted value"
                                    IsReadOnly="True"
                                    HorizontalOptions="FillAndExpand" />
                                <Picker Grid.Column="1"
                                        Title="Select unit"
                                        HorizontalOptions="FillAndExpand">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Celsius</x:String>
                                            <x:String>Fahrenheit</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Grid>

                        </VerticalStackLayout>


                    </controls:ExpanderView.ExpanderContent>    
                                
            </controls:ExpanderView>
            <!-- Expander 2 -->
            <controls:ExpanderView x:Name="Time"
                                   HeaderText="Time"
                                   HeaderIcon="&#xf017;"
                                   HeaderBackgroundColor="LightBlue">

                   <controls:ExpanderView.ExpanderContent>
                    <VerticalStackLayout>
                        <Label Text="This is the content of Expander 2"
                               VerticalOptions="Start"
                               HorizontalOptions="Center" />                     
                    </VerticalStackLayout>
                    
                    </controls:ExpanderView.ExpanderContent>                
            </controls:ExpanderView>
        </VerticalStackLayout>

</ContentPage>
