<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:epj.Expander.Maui;assembly=epj.Expander.Maui"
             x:Class="MyConverterApp2.MainPage">

    <ScrollView>
        <VerticalStackLayout x:Name="AccordionLayout" 
                             Spacing="2">

            <maui:Expander Animated="True" HeaderTapped="Expander_OnHeaderTapped">
                <!--Expander Header-->
                <maui:Expander.HeaderContent>
                    <Grid BackgroundColor="LightGray"
                          Padding="20,0,0,0"
                          MinimumHeightRequest="60">

                        <Label Text="Expander 1"
                           FontSize="Medium"
                           HorizontalOptions="Start"
                           VerticalOptions="Center" />

                        <Label x:Name="Expander1_DownArrow_Collapsed"
                               Style="{StaticResource ExpanderDownArrow}"
                               IsVisible="False" />

                        <Label x:Name="Expander1_UpArrow_Expanded"
                               Style="{StaticResource ExpanderUpArrow}"
                               IsVisible="True" />
                    </Grid> 
                </maui:Expander.HeaderContent>

                <!--Expander Content-->
                <Grid Margin="6,0"
                      HeightRequest="200">
                    <Label Text="This is the content of an expander!"
                           VerticalOptions="Start"
                           HorizontalOptions="Start" />
                </Grid>

            </maui:Expander>

            <maui:Expander Animated="True" HeaderTapped="Expander_OnHeaderTapped">
                <!--Expander Header-->
                <maui:Expander.HeaderContent>
                    <Grid BackgroundColor="LightBlue"
                          Padding="20,0,0,0"
                          MinimumHeightRequest="60">

                        <Label Text="Expander 2"
                           FontSize="Medium"
                           HorizontalOptions="Start"
                           VerticalOptions="Center" />

                        <Label x:Name="Expander2_DownArrow_Collapsed"
                               Style="{StaticResource ExpanderDownArrow}"
                               IsVisible="False" />

                        <Label x:Name="Expander2_UpArrow_Expanded"
                               Style="{StaticResource ExpanderUpArrow}"
                               IsVisible="True" />

                       
                    </Grid> 
                </maui:Expander.HeaderContent>

                <!--Expander Content-->
                <Grid Margin="6,0"
                      HeightRequest="200">
                    <Label Text="This is the content of expander 2"
                           VerticalOptions="Start"
                           HorizontalOptions="Start" />
                </Grid>

            </maui:Expander>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
